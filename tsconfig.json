{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": [
            "esnext",
            "dom"
        ],
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "resolvePackageJsonExports": true
    },
    "include": [ "src" ],
    "exclude": [ "node_modules" ]
}